############################################# Импорт файлов #############################################
#:import AddObject view.screens.main_screen.add_object


############################################# Переменные #####################################################
# Пробелы
#:set spacing_between_participant dp(5)
#:set spacing_between_rows dp(10)
#:set popup_spacing dp(20)

# Внутренние отступы
#:set popup_padding dp(15)
#:set padding_btn [dp(15), dp(5)]

# Шрифты
#:set Montserrat_Regular "assets/fonts/Montserrat-Regular.ttf"
#:set Montserrat_Medium "assets/fonts/Montserrat-Medium.ttf"

#Размеры шрифтов
#:set label_fz sp(12)
#:set text_input_fz sp(10)

###############################################################################################################

############################################# Динамические классы #############################################
<Btn@Button>
    size_hint: (None, None)
    background_normal: ""
    background_color: (0, 0, 0, 0)

########################################################################################################

<AddObjectPopup>:
    id: add_object_popup
#    size_hint: (0.55, 0.65)
    size_hint: (0.49, 0.58)
    background_color: (0, 0, 0, 0)
    BoxLayout:
        id: add_object_fragment
        orientation: "horizontal"
        Btn:
            pos_hint: {"x": 0, "top": 1}
            width: img_close_popup.size[0]
            height: img_close_popup.size[1]
            on_press: root.close_popup()
            Image:
                id: img_close_popup
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_hint: (None, None)
                size: self.texture_size
                source: "assets/img/close_popup.png"