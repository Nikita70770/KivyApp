############################################# Переменные #####################################################
# Пробелы
#:set spacing_between_participant dp(5)
#:set spacing_between_rows dp(10)
#:set popup_spacing dp(20)

# Внутренние отступы
#:set popup_padding dp(15)
#:set padding_btn [dp(15), dp(5)]

#Размеры шрифтов
#:set label_fz sp(12)
#:set text_input_fz sp(10)

###############################################################################################################

############################################# Динамические классы #############################################
<TextLabel@MDLabel>:
    size_hint: (None, None)
    font_size: label_fz

<ParticipantLabel@MDLabel>:
    padding: [dp(3), dp(0)]
    size_hint: (None, None)
    font_size: label_fz
    text: ""

<Btn@Button>
    size_hint: (None, None)
    background_normal: ""
    background_color: (0, 0, 0, 0)

<InputData@TextInput>:
    font_size: text_input_fz
    cursor_color: (0, 0, 0, 1)
    background_color: [0, 0, 0, 0]
    background_normal: ""

<InputDataLayout@RelativeLayout>:
    # рамка для BoxLayout
    canvas.after:
        Color:
            rgba: 217/255, 217/255, 217/255, 1
        Line:
            width: 1.5
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 6)

<InputDataContainer@BoxLayout>:
    orientation: "horizontal"
    pos_hint: { "center_x": 0.5, "center_y": 0.5 }
    size_hint: (0.95, 1)
#    md_bg_color: (0, 1, 0, 1)

########################################################################################################

<AddObjectPopup>:
    id: add_object_popup
#    size_hint: (0.55, 0.65)
    size_hint: (0.49, 0.58)
    background_color: (0, 0, 0, 0)
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            size_hint: (0.97, 0.96)
            spacing: popup_spacing
            padding: popup_padding
            canvas.before:
                Color:
                    rgba: (255, 255, 255, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [6]
            BoxLayout:
                orientation: "vertical"
                GridLayout:
                    id: grid_layout_popup
                    rows: 12
                    cols: 1
                    spacing: spacing_between_rows
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Наименование"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                    BoxLayout:
                        id: type_service_layout
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Тип услуги"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                                    id: inpt_type_service
                                    on_focus:
                                        if self.focus: root.open_dropdown_menu("Тип услуги", 1, ["type_service_layout", "inpt_type_service"])
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Адрес объекта"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "ФИО заказчика"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Телефон"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Почта"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                    BoxLayout:
                        id: layout_responsible
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Ответственный"
                        InputDataLayout:
                            Button:
                                id: btn_choose_responsible
                                opacity: 0
                                on_release: root.open_dropdown_menu("Ответственный", 1, ["layout_responsible", "box_layout_responsible"])
                            InputDataContainer:
                                id: box_layout_responsible
                    BoxLayout:
                        id: layout_participant
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Участники"
                        InputDataLayout:
                            Button:
                                id: btn_choose_participant
                                opacity: 0
                                on_release: root.open_dropdown_menu("Участники", 4, ["layout_participant", "box_layout_participant"])
                            InputDataContainer:
                                id: box_layout_participant
                                spacing: spacing_between_participant
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Номер договора"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                    BoxLayout:
                        id: status_layout
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Статус"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                                    id: inpt_choose_status
                                    on_focus: if self.focus: root.open_dropdown_menu("Статус", 1, ["status_layout", "inpt_choose_status"])
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Дата выезда"
                        InputDataLayout:
                            InputDataContainer:
                                InputData:
                    BoxLayout:
                        orientation: "horizontal"
                        TextLabel:
                            size: self.texture_size
                            text_size: (None, None)
                            text: "Фото объекта"
                        InputDataLayout:
                            Button:
                                id: btn_choose_building
                                opacity: 0
                                on_release: root.choose_img_building()
                            InputDataContainer:
                                id: box_layout_building
            Btn:
                pos_hint: { "center_x": 0.5, "center_y": 0.5 }
                padding: padding_btn
                size: self.texture_size
                text: "Сохранить"
                font_size: label_fz
                on_release: root.save_data_object()
                canvas.before:
                    Color:
                        rgba: (0, 0, 0, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [6, ]
        Btn:
            pos_hint: {"x": 0, "top": 1}
            width: img_close_popup.size[0]
            height: img_close_popup.size[1]
            on_press: root.close_popup()
            Image:
                id: img_close_popup
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_hint: (None, None)
                size: self.texture_size
                source: "assets/img/close_popup.png"