############################################# Импорт файлов #############################################
#:import ScrollEffect kivy.effects.scroll.ScrollEffect
###############################################################################################################

######################################################### Переменные ################################################
# Пробелы
#:set content_spacing 20
#:set vertical_spacing_1 dp(10)
#:set vertical_spacing_2 dp(8)

# Внутренние отступы

# Шрифты
#:set Montserrat_Regular "assets/fonts/Montserrat-Regular.ttf"

#Размеры шрифтов
#:set label_fz sp(12)
###############################################################################################################

############################################# Динамические классы #############################################
<GeneralLabel@Label>:
    size_hint: (None, None)
    size: self.texture_size
    font_name: Montserrat_Regular
    font_size: label_fz
    color: (0, 0, 0, 1)

<BtnAddPlan@Button>:
    pos_hint: { "right": 1, "center_y": 0.5 }
    size_hint: (None, None)
    size: img_add_plan.size
    background_normal: ""
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [6, ]
    Image:
        id: img_add_plan
        source: "assets/img/plus_48.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        size_hint: (None, None)
        size: self.texture_size

<ElementAddPlan@MDBoxLayout>:
    orientation: "horizontal"
    size_hint: (0.15, None)
    adaptive_height: True
    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 1)
        Line:
            width: 1.1
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 6)
    Widget:
        size_hint_x: 0.1

<ContainerAddPlan@MDBoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    adaptive_height: True

<BlueprintsScroll@MDScrollView>:
    do_scroll_y: False
    do_scroll_x: True
    effect_cls: ScrollEffect
    bar_width: 0

<BlueprintsGrid@MDGridLayout>:
    rows: 1
    cols: 6
    spacing: 25
    size_hint_x: None
    adaptive_width: True

<BlueprintCard@MDCard>:
    size_hint_x: None
    width: dp(120)
    orientation: "vertical"
    BoxLayout:
        canvas.before:
            Color:
                rgba: (217/255, 217/255, 217/255, 1)
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(3)]

<BlueprintTitle@Label>:
    size_hint: (None, None)
    size: self.texture_size
    font_size: label_fz
    color: (98/255, 98/255, 98/255, 1)
###############################################################################################################


<EditBuildingCards>:
