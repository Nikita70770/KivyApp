                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
            BoxLayout:
                id: content_right_column
                orientation: "horizontal"
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: vertical_spacing_1
                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: vertical_spacing_2
    #                    md_bg_color: (0, 80/255, 0, 1)
