    BoxLayout:
        orientation: "vertical"
        spacing: main_spacing
        MDBoxLayout:
            id: header
            orientation: "horizontal"
            size_hint_y: None
            adaptive_height: True
            MDSeparator:
                orientation: "vertical"
                width: 10
                md_bg_color: (0, 0, 0, 0)
            MDBoxLayout:
                id: header_content
                size_hint_y: None
                adaptive_height: True
                spacing: header_spacing
                Image:
                    id: logo_img
