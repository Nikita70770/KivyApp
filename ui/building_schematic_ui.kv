############################################# Импорт файлов #############################################
#:import HoverItem view.screens.building_schematic.building_schematic_screen
#:import DrawCanvasWidget utils.paint
######################################################### Переменные ################################################
# Пробелы
#:set main_spacing 40
#:set header_spacing 45

# Шрифты
#:set Montserrat_Regular "assets/fonts/Montserrat-Regular.ttf"
#:set Montserrat_Medium "assets/fonts/Montserrat-Medium.ttf"
###########################################################################################################

############################################# Динамические классы #############################################

<Icon@Image>:
    center_x: self.parent.center_x
    center_y: self.parent.center_y
    size_hint: (None, None)

<BtnElement@Button>:
    size_hint_x: None
    width: self.texture_size[0]
    color: (0, 0, 0, 1)
    background_normal: ""
    background_color: (0, 0, 0, 0)

<ToolbarItem@Button>:
    size_hint: (None, None)
    color: (0, 0, 0, 1)
    background_normal: ""
    background_color: (0, 0, 0, 0)

<BtnBorder@Button>:
    size_hint_x: None
    width: self.texture_size[0]
    color: (0, 0, 0, 1)
    background_normal: ""
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 1)
        Line:
            width: 1.15
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], dp(3))

<ElementsBorderContainer@MDBoxLayout>:
    orientation: "horizontal"
    size_hint_x: None
    adaptive_width: True
    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 1)
        Line:
            width: 1.15
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], dp(3))

<ElementsContainer@MDBoxLayout>:
    orientation: "horizontal"
    size_hint_x: None
    adaptive_width: True
###############################################################################################################

<BuildingSchematic>:
    name: "building_schematic"
    BoxLayout:
        orientation: "vertical"
        spacing: main_spacing
        MDBoxLayout:
            id: header
            orientation: "horizontal"
            size_hint_y: None
            adaptive_height: True
            MDSeparator:
                orientation: "vertical"
                width: 10
                md_bg_color: (0, 0, 0, 0)
            MDBoxLayout:
                id: header_content
                size_hint_y: None
                adaptive_height: True
                spacing: header_spacing
                Image:
                    id: logo_img
                    pos_hint: { "center_y": 0.5 }
                    size_hint: (None, None)
                    size: self.texture_size
                    source: "assets/img/logo.png"
                RelativeLayout:
                    ElementsContainer:
                        id: header_content_right
                        pos_hint: { "left": 0 }
                        spacing: 15
                        BtnBorder:
                            padding: [dp(20), 0]
                            text: "Создать слой"
                        MDSeparator:
                            orientation: "vertical"
                            width: 15
                            md_bg_color: (0, 0, 0, 0)
                        # Выбор листа
                        ElementsBorderContainer:
                            ElementsContainer:
                                id: select_sheet_container
                                padding: [dp(20), 0]
                                Label:
                                    id: labl_select_sheet
                                    size_hint_x: None
                                    width: self.texture_size[0]
                                    text: "Выбор листа"
                                    color: (0, 0, 0, 1)
                            MDSeparator:
                                orientation: "vertical"
                                width: 2
                                md_bg_color: (217/255, 217/255, 217/255, 1)
                            ElementsContainer:
                                padding: [dp(12), 0]
                                BtnElement:
                                    pos_hint: { "center_y": 0.5 }
                                    width: img_dropdown_menu.size[0]
                                    on_release: root.open_dropdown_menu("select_sheet_container")
                                    Icon:
                                        id: img_dropdown_menu
                                        size: self.texture_size
                                        source: "assets/img/dropdown_menu.png"
                        ElementsBorderContainer:
                            padding: [dp(8), 0]
                            BtnElement:
                                width: img_sheets.size[0]
                                Icon:
                                    id: img_sheets
                                    size: self.texture_size
                                    source: "assets/img/sheets.png"
                    ElementsContainer:
                        pos_hint: { "right": 1 }
                        spacing: 15
                        BtnBorder:
                            padding: [dp(15), 0]
                            text: "Планы"
                        BtnBorder:
                            padding: [dp(15), 0]
                            text: "Разрезы"
                        BtnBorder:
                            padding: [dp(15), 0]
                            text: "Узлы"
                        BtnBorder:
                            padding: [dp(15), 0]
                            text: "Геология"
                        BtnBorder:
                            padding: [dp(15), 0]
                            text: "Геодезия"
                        BtnBorder:
                            padding: [dp(15), 0]
                            text: "Фото"
        # Главное содержимое страницы
        BoxLayout:
            id: content
            orientation: "horizontal"
            spacing: content_spacing
            MDStackLayout:
                id: content_left_column
                orientation: "lr-tb"
                size_hint_x: None
                adaptive_width: True
                BtnBorder:
                    id: btn_go_back
                    pos_hint: {"center_x": 0.5, "y": 1}
                    size_hint_y: None
                    size: img_go_back.size
                    on_release: root.open_card_screen()
                    Icon:
                        id: img_go_back
                        size: (80, 80)
                        source: "assets/img/arrow_left.png"
            BoxLayout:
#                pos_hint: { "left": 0, "top": 1 }
                orientation: "horizontal"
                spacing: dp(150)
#            RelativeLayout:
#                center_x: self.parent.center_x
#                center_y: self.parent.center_y
#                canvas.before:
#                    Color:
#                        rgba: 0, 0, 1, 1
#                    Rectangle:
#                        size: self.size
#                        pos: self.pos
                canvas.before:
                    Color:
                        rgba: (217/255, 217/255, 217/255, 1)
                    Line:
                        width: 1.15
                        rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], dp(3))
    #                    Color:
    #                        rgba: (0, 1, 0, 1)
    #                    Rectangle:
    #                        pos: self.pos
    #                        size: self.size
                # Слои
                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: { "left": 0, "top": 1 }
                    size_hint: (None, None)
                    adaptive_size: True
                    padding: [dp(12)]
                    canvas.before:
                        Color:
                            rgba: (217/255, 217/255, 217/255, 1)
                        Line:
                            width: 1.15
                            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], dp(3), 0, dp(3), 0)
                    BtnElement:
                        id: btn_layers
                        size_hint: (None, None)
                        size: img_layers.size
                        on_release: root.layers_press(["btn_layers", "img_layers"])
                        Icon:
                            id: img_layers
                            size: self.texture_size
                            source: "assets/img/layers_black.png"
    #                ElementsContainer:
    #                    pos_hint: { "left": 0, "top": 1 }
    #                    size_hint_y: None
    #                    adaptive_height: True
    #                    padding: [dp(12)]
    #                    canvas.before:
