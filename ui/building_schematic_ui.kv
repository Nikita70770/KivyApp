    #                            source: "assets/img/layers_black.png"
                # План
                MDBoxLayout:
#                    id: plan_building_layout
                    orientation: "vertical"
                    pos_hint: { "center_y": 0.5 }
                    size_hint_y: 0.97
                    FloatLayout:
                        id: plan_building_layout
                        pos: self.pos
                        size: self.size
                        Label:
                            pos_hint: { "center_x": 0.5, "center_y": 0.5 }
                            text: "Выберите лист"
                            font_size: sp(16)
                            color: (0, 0, 0, 1)
                # Панель инструментов
                MDBoxLayout:
                    orientation: "vertical"
