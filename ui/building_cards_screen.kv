############################################# Импорт файлов #############################################

#:import ScrollEffect kivy.effects.scroll.ScrollEffect

###############################################################################################################

######################################################### Переменные ################################################

# Пробелы
#:set content_spacing 20

###############################################################################################################

<BuildingCards>:
    name: "building_cards_screen"
    BoxLayout:
        id: content
        orientation: "horizontal"
        spacing: content_spacing
        MDStackLayout:
            id: content_left_column
            orientation: "lr-tb"
            size_hint_x: None
            adaptive_width: True
            Button:
                id: btn_add_object
                orientation: "vertical"
                pos_hint: {"center_x": 0.5, "y": 1}
                size_hint: (None, None)
                size: img_plus.size
                background_normal: ""
                background_color: (0, 0, 0, 0)
                on_press: root.btn_add_object_press(["btn_add_object", "img_plus"])
                canvas.before:
                    Color:
                        rgba: 217/255, 217/255, 217/255, 1
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 6)
                Image:
                    id: img_plus
                    size_hint: (None, None)
                    size: (80, 80)
                    source: "assets/img/plus_48.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
        BoxLayout:
            id: content_right_column
            orientation: "vertical"
            GridLayout:
                id: grid_layout_services
                rows: 1
                cols: 6
                size_hint_y: 0.2
                AnchorLayout:
                    id: cell_service_0
                    anchor_y: "center"
                    # задний фон ячейки
                    ExternalBackgroundCell:
                    BoxLayout:
                        id: service_text_0
                        orientation: "vertical"
                        size_hint: (0.985, 0.965)
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        MDLabelCountObjects:
                            text: "95"
                            font_size: "32sp"
                            color: (247/255, 2/255, 9/255, 1)
                        MDLabelTypeService:
                            text: "объектов"
                            font_size: "14sp"
                            color: (0, 0, 0, 1)
                    ButtonGetObjects:
                        on_press:
                            root.selected_objects(grid_layout_services, "service_text_0", "Все объекты")

                AnchorLayout:
                    id: cell_service_1
                    anchor_y: "center"
                    # задний фон ячейки
                    ExternalBackgroundCell:
                    BoxLayout:
                        id: service_text_1
                        orientation: "vertical"
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        MDLabelCountObjects:
                            text: "55"
                            font_size: "32sp"
                        MDLabelTypeService:
                            text: "обследование \nконструкций"
                            font_size: "14sp"
                    ButtonGetObjects:
                        on_press:
                            root.selected_objects(grid_layout_services, "service_text_1", "Обследование конструкций")

                AnchorLayout:
                    id: cell_service_2
                    anchor_y: "center"
                    # задний фон ячейки
                    ExternalBackgroundCell:
                    BoxLayout:
                        id: service_text_2
                        orientation: "vertical"
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        MDLabelCountObjects:
                            text: "12"
                            font_size: "32sp"
                        MDLabelTypeService:
                            text: "судебная и досудебная экспертизы"
                            font_size: "14sp"
                    ButtonGetObjects:
                        on_press:
                            root.selected_objects(grid_layout_services, "service_text_2", "Судебная и досудебная экспертизы")

                AnchorLayout:
                    id: cell_service_3
                    anchor_y: "center"
                    # задний фон ячейки
                    ExternalBackgroundCell:
                    BoxLayout:
                        id: service_text_3
                        orientation: "vertical"
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        MDLabelCountObjects:
                            text: "8"
                            font_size: "32sp"
                        MDLabelTypeService:
                            text: "независимая \nэкспертиза"
                            font_size: "14sp"
                    ButtonGetObjects:
                        on_press:
                            root.selected_objects(grid_layout_services, "service_text_3", "Независимая экспертиза")

                AnchorLayout:
                    id: cell_service_4
                    anchor_y: "center"
                    # задний фон ячейки
                    ExternalBackgroundCell:
                    BoxLayout:
                        id: service_text_4
                        orientation: "vertical"
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        MDLabelCountObjects:
                            text: "15"
                            font_size: "32sp"
                        MDLabelTypeService:
                            text: "заключения \nо соответсвтии"
                            font_size: "14sp"
                    ButtonGetObjects:
                        on_press:
                            root.selected_objects(grid_layout_services, "service_text_4", "Заключения о соответсвтии")

                AnchorLayout:
                    id: cell_service_5
                    anchor_y: "center"
                    Widget:
                        #граница ячейки
                        canvas.before:
                            Color:
                                rgba: (217/255, 217/255, 217/255, 1)
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [6, 6, 0, 0]
                    BoxLayout:
                        id: service_text_5
                        orientation: "vertical"
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        MDLabelCountObjects:
                            text: "5"
                            font_size: "32sp"
                        MDLabelTypeService:
                            text: "обмерные работы"
                            font_size: "14sp"
                    ButtonGetObjects:
                        on_press:
                            root.selected_objects(grid_layout_services, "service_text_5", "Обмерные работы")

            AnchorLayout:
                id: content_objects
                anchor_y: "center"
                padding: dp(1.5)
                canvas.before:
                    Color:
                        rgba: (217/255, 217/255, 217/255, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [0, 6, 6, 6]
                # Виджет скрывающий зазор между ячейками и карточками
                BoxLayout:
                    id: hide_area_layout
                    size_hint: (None, None)
                    Widget:
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                pos: (cell_service_0.pos[0] + 3, cell_service_0.pos[1] * 0.95)
                                size: (service_text_0.size[0], service_text_0.size[1] / 2.5)
                BoxLayout:
                    orientation: "vertical"
                    padding: dp(15)
                    canvas.before:
                        Color:
                            rgba: (255, 255, 255, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    MDScrollView:
                        id: scroll_view
                        bar_width: 0
                        do_scroll_x: False
                        effect_cls: ScrollEffect
                        canvas.before:
                            Color:
                                rgba: (255, 255, 255, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        on_scroll_stop:
                            root.scroll_direction(self.scroll_y)
                        MDGridLayout:
                            id: gridlayout_cards
                            rows: 3
                            cols: 3
                            padding: dp(5)
                            size_hint_y: None
                            adaptive_height: True
                            spacing: dp(20)