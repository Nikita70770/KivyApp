############################################# Импорт файлов #############################################
#:import ScrollEffect kivy.effects.scroll.ScrollEffect

########################################################################################################

############################################# Переменные #####################################################
# Пробелы
#:set spacing_between_participant dp(5)
#:set spacing_between_rows dp(10)
#:set popup_spacing dp(20)

# Внутренние отступы
#:set popup_padding dp(15)
#:set padding_btn [dp(15), dp(5)]

# Шрифты
#:set Montserrat_Regular "assets/fonts/Montserrat-Regular.ttf"
#:set Montserrat_Medium "assets/fonts/Montserrat-Medium.ttf"

#Размеры шрифтов
#:set label_fz sp(12)
#:set text_input_fz sp(10)
###############################################################################################################

############################################# Динамические классы #############################################
<TextLabel@Label>:
    size_hint: (None, None)
    font_size: label_fz
    font_name: Montserrat_Medium
    color: (0, 0, 0, 1)

<Btn@Button>
    size_hint: (None, None)
    background_normal: ""
    background_color: (0, 0, 0, 0)

<IconBtn@Image>:
    center_x: self.parent.center_x
    center_y: self.parent.center_y
    size_hint: (None, None)
    size: self.texture_size

<InputData@TextInput>:
    font_name: Montserrat_Regular
    cursor_color: (0, 0, 0, 1)
    background_color: [0, 0, 0, 0]
    background_normal: ""
    font_size: sp(12)

<InputDataLayout@RelativeLayout>:
    # рамка для BoxLayout
    canvas.after:
        Color:
            rgba: 217/255, 217/255, 217/255, 1
        Line:
            width: 1.5
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 6)

<InputDataContainer@BoxLayout>:
    orientation: "horizontal"
    pos_hint: { "center_x": 0.5, "center_y": 0.5 }
    size_hint: (0.95, 1)

########################################################################################################

<AddObject>:
#    id: add_object
    orientation: "vertical"
    size_hint: (0.97, 0.96)
    spacing: popup_spacing
    padding: popup_padding
    canvas.before:
        Color:
            rgba: (255, 255, 255, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [6]
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            id: grid_layout_popup
            orientation: "vertical"
            spacing: spacing_between_rows
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Наименование"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: input_name
                            font_size: sp(12)
            BoxLayout:
                id: type_service_layout
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Тип услуги"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: input_type_service
                            on_focus:
                                if self.focus: root.open_dropdown_menu("Тип услуги", 1, ["type_service_layout", "input_type_service"])
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Адрес объекта"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: input_address
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "ФИО заказчика"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: input_full_name
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Телефон"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: input_phone
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Почта"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: input_email
            BoxLayout:
                id: layout_responsible
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Ответственный"
                InputDataLayout:
                    id: input_data_layout
                    Button:
                        id: btn_choose_responsible
                        opacity: 0
                        on_release: root.open_dropdown_menu("Ответственный", 1, ["layout_responsible", "box_layout_responsible"])
                    InputDataContainer:
                        id: box_layout_responsible
            BoxLayout:
                id: layout_participant
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Участники"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
#                        pos_hint: { "right": 1 }
#                        size_hint_x: 0.975
                        spacing: 5
                        MDScrollView:
#                            do_scroll_x: True
                            do_scroll_y: False
#                            do_scroll_y: True
                            effect_cls: ScrollEffect
#                            bar_color: (1, 0, 0, 1)
#                            md_bg_color: (0, 0, 1, 1)
                            on_scroll_stop: root.scroll_direction(self.scroll_x)
                            BoxLayout:
                                id: box_layout_participant
                                orientation: "horizontal"
                                size_hint_x: None
                                width: self.minimum_width
#                                adaptive_width: True
                                spacing: spacing_between_participant
                        Btn:
                            pos_hint: {"x": 0, "center_y": 0.5}
                            id: btn_add_participant
                            size: img_add_group_users.size
                            on_release: root.open_dropdown_menu("Участники", 4, ["layout_participant", "box_layout_participant"])
                            IconBtn:
                                id: img_add_group_users
                                source: "assets/img/add_group_users.png"
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Номер договора"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: input_contract_num
            BoxLayout:
                id: status_layout
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Статус"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        InputData:
                            id: inpt_choose_status
                            on_focus: if self.focus: root.open_dropdown_menu("Статус", 1, ["status_layout", "inpt_choose_status"])
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Дата выезда"
                InputDataLayout:
                    id: input_data_layout
                    InputDataContainer:
                        BoxLayout:
                            orientation: "horizontal"
                            spacing: 5
                            MDScrollView:
                                do_scroll_x: True
                                do_scroll_y: False
                                bar_width: 0
                                effect_cls: ScrollEffect
                                MDBoxLayout:
                                    id: layout_departure_dates
                                    orientation: "horizontal"
                                    size_hint_x: None
                                    adaptive_width: True
                                    spacing: 20
                            Btn:
                                pos_hint: {"x": 0, "center_y": 0.5}
                                size: img_calendar.size
                                on_release: root.show_calendar_dialog()
                                IconBtn:
                                    id: img_calendar
                                    source: "assets/img/calendar.png"
            BoxLayout:
                orientation: "horizontal"
                TextLabel:
                    size: self.texture_size
                    text_size: (None, None)
                    text: "Фото объекта"
                InputDataLayout:
                    id: input_data_layout
                    Button:
                        id: btn_choose_building
                        opacity: 0
                        on_release: root.choose_img_building(["container_building", "labl_file_name"])
                    InputDataContainer:
                        id: box_layout_building
                        MDBoxLayout:
                            id: container_building
                            orientation: "horizontal"
                            spacing: dp(5)
                            opacity: 0
                            TextLabel:
                                id: labl_file_name
                                pos_hint: {"x": 0, "center_y": 0.5}
                                size_hint: (None, None)
                                size: self.texture_size
                                font_name: Montserrat_Regular
                                font_size: sp(11)
                            Btn:
                                pos_hint: {"x": 0, "center_y": 0.5}
                                size: img_remove.size
                                on_release: root.delete_elem_building(["container_building", "labl_file_name"])
                                IconBtn:
                                    id: img_remove
                                    source: "assets/img/remove_elem32.png"
    Btn:
        id: save_data
        pos_hint: { "center_x": 0.5, "center_y": 0.5 }
        padding: padding_btn
        size: self.texture_size
        text: "Сохранить"
        font_size: label_fz
        on_release: root.save_data_object()
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [6, ]