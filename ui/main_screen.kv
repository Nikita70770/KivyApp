#:import BuildingCards view.screens.screens_fragments.building_cards_screen
#:import EditBuildingCards view.screens.screens_fragments.edit_building_screen

###############################################################################################################

############################################# Динамические классы #############################################
###############################################################################################################

######################################################### Переменные ################################################
# Пробелы
#:set main_spacing 40
#:set header_spacing 45

# Шрифты
#:set Montserrat_Regular "assets/fonts/Montserrat-Regular.ttf"
#:set Montserrat_Medium "assets/fonts/Montserrat-Medium.ttf"


# Задний фон главного экрана
<MainBackgroundColor@Widget>:
    canvas.before:
        Color:
            rgba: (255, 255, 255, 1)
        Rectangle:
            pos: root.pos
            size: root.size

# Задний фон внешней ячейки
<ExternalBackgroundCell@Widget>:
    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [6, 6, 0, 0]

# Текстовые поля
<MDLabelCountObjects@MDLabel>:
    id: label_count_objects
    text_size: self.size
    halign: "center"
    valign: "bottom"
    font_name: Montserrat_Medium
    color: (98/255, 98/255, 98/255, 1)

<MDLabelTypeService@MDLabel>:
    id: label_type_service
    text_size: self.size
    halign: "center"
    valign: "top"
    font_name: Montserrat_Regular
    color: (98/255, 98/255, 98/255, 1)

# Кнопки
<ButtonGetObjects@Button>:
    id: btn_type_service
    opacity: 0

###########################################################################################################
<MainScreen>:
    name: "main_screen"
    MainBackgroundColor:
    BoxLayout:
        id: main
        orientation: "vertical"
        padding: [35]
        spacing: main_spacing
        # Шапка с логотипом и текстовым полем
        MDBoxLayout:
            id: header
            orientation: "horizontal"
            size_hint_y: None
            adaptive_height: True
            MDSeparator:
                orientation: "vertical"
                width: 10
                md_bg_color: (0, 0, 0, 0)
            MDBoxLayout:
                id: header_content
                size_hint_y: None
                adaptive_height: True
                spacing: header_spacing
                Image:
                    id: logo_img
                    pos_hint: { "center_y": 0.5 }
                    size_hint: (None, None)
                    size: self.texture_size
                    source: "assets/img/logo.png"
                TextInput:
                    id: search_textInput
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [20]
                    hint_text: "Поиск и фильтр"
                    hint_text_color: (98/255, 98/255, 98/255, 1)
                    font_size: sp(12)
                    font_name: Montserrat_Regular
                    cursor_color: (0, 0, 0, 1)
                    background_color: [0, 0, 0, 0]
                    background_normal: ""
                    # рамка для TextInput
                    canvas.after:
                        Color:
                            rgba: 217/255, 217/255, 217/255, 1
                        Line:
                            width: 1.5
                            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], 6)
        # Контент главной страницы
        ScreenManager:
            id: screen_manager
            BuildingCards:
                name: "building_cards"
#                id: building_cards
                manager: screen_manager
#            EditBuildingCards:
#                id: edit_building_cards
#                manager: cards_screen_manager