############################################# Импорт файлов #############################################
#:import MainScreen view.main_page.main_window
#:import ScrollEffect kivy.effects.scroll.ScrollEffect

############################################# Динамические классы #############################################

# Виджеты, задающие цвета элементам
###################################

# Задний фон главного экрана
<MainBackgroundColor@Widget>:
    canvas.before:
        Color:
            rgba: (255, 255, 255, 1)
        Rectangle:
            pos: root.pos
            size: root.size
# Задний фон внешней ячейки
<ExternalBackgroundCell@Widget>:
    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [6, 6, 0, 0]

# Текстовые поля
<MDLabelCountObjects@MDLabel>:
    id: label_count_objects
    text_size: self.size
    halign: "center"
    valign: "bottom"
    color: (98/255, 98/255, 98/255, 1)

<MDLabelTypeService@MDLabel>:
    id: label_type_service
    text_size: self.size
    halign: "center"
    valign: "top"
    color: (98/255, 98/255, 98/255, 1)

# Кнопки
<ButtonGetObjects@Button>:
    id: btn_type_service
    opacity: 0

